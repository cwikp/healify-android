<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healify">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.PatientBrowse"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PatientsList"
            android:label="@string/title_activity_patients_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.PatientEntry" />
        <activity android:name=".activities.AddTemperaturePopup" />
        <activity android:name=".activities.AddDrugPopup" />
        <activity android:name=".activities.AddCheckPopup" />
        <activity android:name=".activities.BrowseTemperaturePopup"></activity>
    </application>

</manifest>